                        col.Field("COD_ESTADO_CECO").ForeignKeyField("COD_ESTADO_CECO").ForeignKeyValue("DESCRIPCION").DataSource((IEnumerable<object>)new syncfusion_payc.Models.test_payc_contabilidadEntities().ESTADOS_CECO.ToList()).HeaderText("ESTADO").EditType(EditingType.DropdownEdit).Add();
                        col.Field("CECO_PSL").HeaderText("CECO_PSL").Add();

                    })
                    .ClientSideEvents(eve =>
                    {  // Definición de función para el evento
                        eve.ActionComplete("actionComplete");
                    })
